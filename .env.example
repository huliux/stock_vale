# 环境变量示例文件
# 将此文件复制为 .env 并填入实际值
# .env 文件不应提交到版本控制库

# 数据库连接信息 (如果使用数据库)
# DB_TYPE=postgresql
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=stock_vale

# 外部 API 密钥 (如果需要)
# DATA_API_KEY=your_api_key
# ANOTHER_API_SECRET=your_secret

# 其他配置
# LOG_LEVEL=INFO

# WACC 计算参数 (用于 valuation_calculator.py)
# 默认 Beta 值 (衡量股票相对于市场的波动性)
DEFAULT_BETA=1.0
# 无风险利率 (例如，长期国债收益率)
RISK_FREE_RATE=0.03
# 市场风险溢价 (市场预期回报率 - 无风险利率)
MARKET_RISK_PREMIUM=0.05
# 默认税前债务成本 (公司借款的平均利率)
DEFAULT_COST_OF_DEBT=0.05

# DCF 增长率上限 (用于 valuation_calculator.py)
# 限制从历史自由现金流推导出的平均增长率，防止因数据波动导致估值过高 (例如 0.25 代表 25%)
DCF_GROWTH_CAP=0.25
