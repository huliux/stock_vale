[DEFAULT]
# 默认股票代码
stock = 600519.SH

# 默认PE估值倍数范围，用逗号分隔
pe = 5,8,12

# 默认PB估值倍数范围，用逗号分隔
pb = 0.8,1.2,1.5

# 默认增长率范围，用逗号分隔
growth = 0.05,0.08,0.1

# 默认折现率范围，用逗号分隔
discount = 0.1,0.12,0.15

# 默认EV/EBITDA倍数范围，用逗号分隔
ev_ebitda = 6,8,10

[DATABASE]
# 数据库用户名
user = user

# 数据库密码
password = password

# 数据库主机地址
host = localhost

# 数据库端口号
port = 1234

# 数据库名称
database = postgreSQL

[VALUATION]
# 税率，用于计算EBIAT（税后息前利润）
tax_rate = 0.25

# 默认增长率范围，用于在没有用户提供的增长率时使用
default_growth_rates = 0.03,0.05,0.08

# 默认折现率范围，用于在没有用户提供的折现率时使用
default_discount_rates = 0.05,0.08,0.1

# 现金及现金等价物占总资产的百分比，用于计算企业价值（EV）
cash_equivalents_percentage = 0.05

# 折旧与摊销占营业收入的百分比，用于计算企业价值（EV）
depreciation_amortization_percentage = 0.05

# 公式说明：
# 1. EBITA (税后息前利润) = (营业利润 + 财务费用) * (1 - 税率)
# 2. FCFF (企业自由现金流) = EBITA + 折旧与摊销 - 资本支出 - 营运资本增加
# 3. FCFE (股权自由现金流) = FCFF - 利息*(1-税率) + 净债务变动
# 4. 企业价值 (EV) = 市值 + 总负债 - 现金及现金等价物
# 5. EV/EBITDA = 企业价值 / EBITDA
# 6. 股息率 = (现金分红税后 / 最新收盘价) * 100
# 7. 分红支付率 = (现金分红税后 * 总股本) / 净利润 * 100
# 8. PE (市盈率) = 市值 / (净利润 / 100000000)
# 9. PB (市净率) = 最新收盘价 / 每股净资产
# 10. CAGR (复合年均增长率) = ((最新值 / 三年前值) ** (1/3) - 1) * 100

[TABLES_AND_FIELDS]
# 存储股票基本信息的表名
stock_basic_table = stock_basic

# 存储股票基本信息的字段名，包括股票代码和股票名称
stock_basic_fields = ts_code,name

# 存储每日股价数据的表名
daily_quotes_table = daily_quotes

# 存储每日股价数据的字段名，包括股票代码、收盘价和交易日期
daily_quotes_fields = ts_code,close,trade_date

# 存储收入报表数据的表名
income_statement_table = income_statement

# 存储收入报表数据的字段名，包括股票代码、结束日期、净利润、营业收入、总收入、营业成本、营业利润、非营业收入、非营业支出
income_statement_fields = ts_code,end_date,n_income,revenue,total_revenue,oper_cost,operate_profit,non_oper_income,non_oper_exp

# 存储财务指标数据的表名
financial_indicators_table = financial_indicators

# 存储财务指标数据的字段名，包括股票代码、结束日期、每股收益、每股净资产、净资产收益率、净利润率、资产负债率
financial_indicators_fields = ts_code,end_date,eps,bps,roe,netprofit_margin,debt_to_assets

# 存储现金流量数据的表名
cash_flow_table = cash_flow

# 存储现金流量数据的字段名，包括股票代码、结束日期、经营活动产生的现金流量净额、购建固定资产、无形资产和其他长期资产支付的现金、收到的借款、偿还债务支付的现金、折旧与摊销等
cash_flow_fields = ts_code,end_date,n_cashflow_act,stot_out_inv_act,stot_cash_in_fnc_act,stot_cashout_fnc_act,c_pay_acq_const_fiolta,c_paid_invest,decr_inventories,incr_oper_payable,decr_oper_payable,c_recp_borrow,c_prepay_amt_borr,depr_fa_coga_dpba,amort_intang_assets

# 存储资产负债表数据的表名
balance_sheet_table = balance_sheet

# 存储资产负债表数据的字段名，包括股票代码、结束日期、总股本、总资产、总负债、股东权益合计、流动资产合计、流动负债合计
balance_sheet_fields = ts_code,end_date,total_share,total_assets,total_liab,total_hldr_eqy_exc_min_int,total_cur_assets,total_cur_liab

# 存储分红数据的表名
dividend_table = dividend

# 存储分红数据的字段名，包括股票代码、结束日期、现金分红税后、公告日期、分红进程
dividend_fields = ts_code,end_date,cash_div_tax,ann_date,div_proc
